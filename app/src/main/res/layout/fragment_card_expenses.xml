<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.expenses.CardExpensesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="@android:color/transparent">

        <include
            android:id="@+id/card_image"
            layout="@layout/card_expenses_default_item"
            android:layout_width="@dimen/dashboard_card_width"
            android:layout_height="@dimen/dashboard_card_height"
            android:layout_marginTop="@dimen/dashboard_card_margin_final_top"
            android:layout_marginEnd="@dimen/dashboard_card_margin_final_end"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
